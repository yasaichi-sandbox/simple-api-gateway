{
  "name": "simple-api-gateway",
  "version": "0.0.1",
  "description": "",
  "author": "Yuichi Goto",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "rm -rf ./libs/fake-api-openapi-gen/src/generated/ && openapi-generator-cli generate -g typescript -i ./schema.yaml -o ./libs/fake-api-openapi-gen/src/generated/ --additional-properties=platform=deno,useObjectParameters=true",
    "format": "deno fmt",
    "start": "deno run --allow-env --allow-net --allow-read=. src/main.ts",
    "start:dev": "deno run --allow-env --allow-net --allow-read=. --watch src/main.ts",
    "start:debug": "deno run --allow-env --allow-net --allow-read=. --inspect=127.0.0.1:9229 --watch src/main.ts",
    "start:prod": "deno run --allow-env --allow-net --allow-read=. src/main.ts",
    "lint": "deno lint",
    "test": "deno test --allow-env --allow-read=. --ignore=test/ --parallel",
    "test:watch": "deno task test --watch",
    "test:cov": "deno task test --coverage && deno coverage --exclude='/generated/' && deno coverage --exclude='/generated/' --lcov --output=coverage/lcov.info",
    "test:debug": "deno test --allow-env --allow-read=. --inspect-brk=127.0.0.1:9230",
    "test:e2e": "deno test --allow-env --allow-net --allow-read=. --parallel test/",
    "typecheck": "deno check src/main.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "deepmerge": "^4.3.1",
    "effect": "^3.0.0",
    "p-retry": "^6.2.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "type-fest": "^4.18.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@std/testing": "npm:@jsr/std__testing@^0.225.0",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.3.1",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.0",
    "fetch-mock": "^11.0.0",
    "sinon": "^18.0.0",
    "supertest": "^7.0.0"
  }
}
